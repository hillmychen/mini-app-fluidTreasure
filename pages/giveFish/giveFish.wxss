/* pages/giveFish/giveFish.wxss */
page{
  background:#f5f5f5;
  min-height: 100%;
}
.hehe-tab{
  height: 90rpx;
  width: 100%;
  font-size: 30rpx;
  background:white;
}
.color-grey{
  color:#969696;
}
.flex{
  display: flex;
  display: -webkit-flex;

}
.center{
  align-content: center;
  align-items: center;
  /* justify-content: center; */
}
.justify-content{
  justify-content: center;
  -webkit-justify-conten:center;
}

.flex-around{
  justify-content: space-around;
  -webkit-justify-content: space-around;
}
.flex-between{
  justify-content: space-between;
  -webkit-justify-content: space-between;
}

.align-items{
  align-items: center;
  -webkit-align-items:center;  
}

.flex-wrap{
  flex-wrap: wrap;
  -webkit-flex-wrap:wrap;
}
.flex-1{
  flex: 1;
  -webkit-flex:1;
}
.flex-end{
  justify-content: flex-end;
  -webkit-justify-content:flex-end;
}
.flex-start{
  justify-content: flex-start;
  -webkit-justify-content:flex-start;
}
.active{
  border-bottom: 1px solid #22A9CE;
  color:#22A9CE;
}

.hehe-tab-item{
  height: 100%;
  text-align:center;
  line-height:90rpx;

}

.hehe-num-input{
  width: 705rpx;
  margin: 30rpx auto;
  background: white;
  border-radius:10rpx;
}

.hehe-total{
  width:650rpx;
  height: 100rpx;
  margin:0 auto;
  font-size:30rpx;
}

.border-bottom{
  border-bottom: 1px solid #f5f5f5;
}

.num-input{
  min-width: 100rpx;
  text-align: right;
}

.input-item{
  /* width:200rpx; */
}

.descrip{
  min-width: 70rpx;
  margin-left: 16rpx;
}

.redbag-description{
  height: 100rpx;
}
.redbag-description input{
  font-size: 30rpx;
  margin-left: 30rpx;
  display:block;
  width:600rpx;

}
.confirm-redbag{
  width:705rpx;
  height: 96rpx;
  background:#22A9CE;
  color: white;
  border-radius: 10rpx;
  margin:0 auto;

}

.password-input-container{
  background: rgba(142, 142, 142, .6);
  position:fixed;
  right:0;
  bottom:0;
  top:0;
  left:0;
  -webkit-overflow-scrolling: touch;
  z-index: 100;
}
.password-input-content{
  width:80%;
  border-radius: 20rpx;
  background: white;
  margin:100rpx auto auto auto;

}
.fish-alert-title icon{
 
}
.fish-alert-title text{
  text-align: center;
}
.confirm-password{
  white-space: nowrap;
  background: #22A9CE;
  color: white;
  width:200rpx;

}
.password-input{
  height:85rpx;
  padding:20rpx;
}
.red_back{
  background:#ce3e31;
  width: 70%;
  margin: 0 auto;
  margin-top: 60rpx;
  height: 60%;
  border: 20rpx solid #d43a35;
  border-radius: 16rpx;
  flex-direction: column;
}
.comfit_set_con{

  width:160rpx;
  height: 160rpx;
  background: #f4e5b5;
  margin-top: 30rpx;
  border-radius: 50%;
  color:#f3d7ab;

}
.comfit_send{
  margin-top: 5rpx;
  box-sizing: border-box;
  /* border: 4rpx solid #e3e3d4; */
  width:160rpx;
  height: 160rpx;
  border-radius: 50%;
  background:#f4e5b5;
  border: none;
  text-align: center;
  line-height: 160rpx;
  font-size: 40rpx;

}
.send_txt{
  color:#f3d7ab;
  margin-top: 150rpx;
  font-size: 30rpx;
}
.send_tip{
  color:#f3d7ab;
  margin-top: 20rpx;
}