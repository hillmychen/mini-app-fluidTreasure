/* pages/center/passwordConfig.wxss */
@import "../template/center-template.wxss";
.flex{
  display: flex;
}
.column-center{
  align-items: center;
  align-content: center;
}
page{
  width:100%;
  height:100%;
  background: #f5f5f5;
  box-sizing: border-box;
}
.container{
 margin-top:35rpx;
}
.set_pass ,.con_pass{
  height: 100rpx;
  border-top: 2rpx solid #e1e1e1;
  background: white;
  line-height: 100rpx;
  padding-left:20rpx;
}
.set_pass>view ,.con_pass>view{
  font-size: 30rpx;
  color:black;
}
.set_pass input ,.con_pass input{
  width:60%;
  height:40rpx;
  display: inline-block;
  font-size: 30rpx;
  padding-left:20rpx;
}
.confirm{
  width:88%;
  
  margin: 0 auto;
  margin-top: 30rpx;
  border-radius:16rpx;
  height: 90rpx;
  background:#22A9CE;
  color:#ffffff;
  text-align: center;
  line-height: 90rpx;
}